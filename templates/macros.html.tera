{% macro header(user) %}
<header>
    <a class="HLogo" href="/">Tikifi</a>
    <div class="searchToolbar">
        <input type="text" placeholder="Search for events and venues" id="search_bar" onfocus="show_search()" oninput="search()">
        <i class="material-symbols-outlined HSearchI">search</i>
        <!--<a class="HSort"><i class="material-symbols-outlined HSortI"></i></a>-->
        <div id="search-menu">
            <div id="search-menu-filters">
                <a class="elDate unedited"><i class="material-symbols-outlined filter_icon">schedule</i><input id="event_filter_date" class="custom_input" name="date" type="date" oninput="search()"></a>
                <a class="elDate unedited"><i class="material-symbols-outlined filter_icon">euro</i><input id="event_filter_price" class="custom_input" pattern='[0-9]+(\\.[0-9][0-9]?)?' value=0.00 name="price" type="number" step="0.01" oninput="search()"></a>
            </div>
            <div id="search-results" style="flex-direction:column">
            </div>
        </div>
    </div>
    <div class="HRMenu">
        <!--<label class="toggle" onclick="show_favorites()">
            <i class="material-symbols-outlined HFavoritesI fill">favorite</i>
        </label>-->
        <label class="toggle" onclick="show_cart()">
            <i class="material-symbols-outlined HFavoritesI fill">shopping_cart</i>
        </label>
        <div id="el_liked_menu">
            <div id="el_liked_menu_content"></div>
            <p style="text-align: center; font-size: 14px;"><a style="color:rgb(33, 156, 140); font-size: 14px" href="/login/google">log in</a> to keep your likes and make them public</p>
        </div>
        <form id="el_cart_menu" action="/ticket/buy">
            <div id="el_cart_menu_content"></div>
            {% if not user %}
                <p style="text-align: center; font-size: 14px;"><a style="color:rgb(33, 156, 140); font-size: 14px" href="/login/google">log in</a> to use the cart feature</p>
            {% else %}
                <button class="round_button buy_listing_button" style="margin-right: 10px; margin-bottom: 10px; text-align: center" type="submit">buy</button>
            {% endif %}
        </form>
        {% if not user %}
            <a id="HLogin" href="/login/google"><img src="/assets/btn_google.png"/>Log in</a>
        {% else %}
        <label class="toggle" onclick="show_profile()">
            <img class="material-symbols-outlined HFavoritesI fill" style="margin-left: 0; height: 32px; width: 32px; border-radius:16px" src="{{user.avatar}}"/>
        </label>
        <div id="el_profile_menu">
            <div id="el_profile_menu-header" style="background-image: url({{user.avatar}})"></div>
            <img id="el_profile_menu-header-pfp" src="{{user.avatar}}"/>
            <div id="el_profile_menu-links">
                <a class="menuLink" href="/dashboard"><i class="material-symbols-outlined">home</i>Dashboard</a>
                <a class="menuLink" href="/dashboard/events"><i class="material-symbols-outlined">celebration</i>Events</a>
                <a class="menuLink" href="/dashboard/venues"><i class="material-symbols-outlined">fort</i>Venues</a>
                <a class="menuLink" href="/dashboard/tickets"><i class="material-symbols-outlined">play_pass</i>Tickets</a>
                <a class="menuLink" href="/logout"><i class="material-symbols-outlined">logout</i>Log out</a>
            </div>
        </div>
        {% endif %}
    </div>
</header>

<script>

    function show_favorites() {
        let liked_menu = document.getElementById("el_liked_menu");
        liked_menu.classList.toggle("show");

        let events = localStorage.getItem("liked_events")
        let content = JSON.parse(events);

        fill_with_mini_listings("el_cart_menu_content", content);
    }

    function show_cart() {
        let cart_menu = document.getElementById("el_cart_menu");
        cart_menu.classList.toggle("show");

        fill_with_cart_items("el_cart_menu_content");
    }

    function fill_with_cart_items(div) {
        document.getElementById(div).innerHTML="" 

        let liked_menu_content = document.getElementById(div);
        let listings = document.querySelectorAll(".checkbox_listing")

        fetch("/cart/view")
        .then(function (response) {
            switch (response.status) {
                case 200:
                    return response.text();
                case 404:
                    return;
                default:
                    throw response;
            }
        })
        .then(function (template) {
            liked_menu_content.innerHTML=liked_menu_content.innerHTML+template
        })
        .catch(function (response) {
            console.log(listing.dataset.event);
        });
    }

    function fill_with_mini_listings(div, content) {
        document.getElementById(div).innerHTML="" 

        let liked_menu_content = document.getElementById(div);
        let listings = document.querySelectorAll(".checkbox_listing")

        fetch("/events/" + content + "/mini_listing")
        .then(function (response) {
            switch (response.status) {
                case 200:
                    return response.text();
                case 404:
                    return;
                default:
                    throw response;
            }
        })
        .then(function (template) {
            liked_menu_content.innerHTML=liked_menu_content.innerHTML+template
        })
        .catch(function (response) {
            console.log(listing.dataset.event);
        });
    }

    function show_profile() {
        document.getElementById("el_profile_menu").classList.toggle("show");
    }

    function show_search() {
        document.getElementById("search-menu").style.display = 'flex';
        document.getElementById("search-results").style.display = 'none';
    }

    function update_date_filter(value) {
        document.getElementById("event_filter_date").value = value;
        search()
    }

    function update_price_filter(value) {
        document.getElementById("event_filter_price").value = value;
        search()
    }

    let search_bar = document.getElementById("search_bar");
    let search_menu = document.getElementById("search-menu");

    window.onclick = function() {
        let hover = search_menu.parentNode.querySelector(":hover");
        if(hover != search_menu && hover != search_bar)
        {
            document.getElementById('search-menu').style.display = 'none';
        }
    }

    //Search function might need a rework in my opinion
    function search() {
        let search_menu = document.getElementById("search-menu");
        let search_results = document.getElementById("search-results");

        let search_filter_text = document.getElementById("search_bar").value;
        let search_filter_date = document.getElementById("event_filter_date");
        let search_filter_price = document.getElementById("event_filter_price");


        let filters="";

        if(search_filter_text != "") {
            filters = filters + "query=" + search_filter_text;
        } else {
        
        }

        if(event_filter_date.value != "") {
            filters = filters + "&date=" + event_filter_date.value;
            event_filter_date.parentNode.classList.remove("unedited");
        } else {
            event_filter_date.parentNode.classList.add("unedited");
        }
        
        if(event_filter_price.value != 0.00)        
        {
            filters = filters + "&price=" + event_filter_price.value;
            event_filter_price.parentNode.classList.remove("unedited");
        } else {
            event_filter_price.parentNode.classList.add("unedited");
        }

        if(filters == "") {
            search_results.style.display = 'none';
            return;
        }

        fetch("/search?" + filters)
        .then(function (response) {
            switch (response.status) {
                case 200:
                    search_menu.style.display = "inherit";
                    search_results.style.display = "inherit";
                    return response.text();
                case 404:
                    search_menu.style.display = "none";
                    return;
                default:
                    throw response;
            }
        })
        .then(function (template) {
            if(search_results.innerHTML) search_results.innerHTML=template;
        })
        .catch(function (response) {
            console.log(response);
        });
    }

    function set_liked(type, uid, state) {
        let type_storage = (type==2) ? "liked_events" : "liked_venues"
        let liked_listings = (localStorage.getItem(type_storage) == null) ? [] : JSON.parse(localStorage.getItem(type_storage));
        if(liked_listings.includes(uid) && state == false) { 
            liked_listings.splice(liked_listings.indexOf(uid), 1);
            fetch("/like/"+uid);
        }
        if(!liked_listings.includes(uid) && state == true) {
            liked_listings.push(uid);
            fetch("/like/"+uid);
        }
        localStorage.setItem(type_storage,JSON.stringify(liked_listings))
    }

    window.onload = function () {
        let listings = document.querySelectorAll(".checkbox_listing")
        let events = localStorage.getItem("liked_events")
        let venues = localStorage.getItem("liked_venues")

        listings.forEach((listing => {
            if(listing.dataset.venue && venues) {
                if(JSON.parse(venues).includes(listing.dataset.venue)) listing.checked = true;
            } else if(listing.dataset.event && events) {
                if(JSON.parse(events).includes(listing.dataset.event)) listing.checked = true;
            }
        }))
    }

    // cart logic

</script>
{% endmacro header %}

